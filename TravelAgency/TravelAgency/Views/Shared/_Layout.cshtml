@using System.Web.Optimization
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    @User.Identity.Name
    <header>
        <h1 class="text-center">Tурагентство "Vov-Tour"</h1>
        <div class="row justify-content-md-center">
            <div class="col-3 text-center">+38 (095) 897 24 28</div>
            <div class="col-4 text-center">
                <img src="/Content/img/logo.jpg" />
            </div>
            <div class="col-3 text-center">
                @if (User.Identity.IsAuthenticated)
                {
                    @Html.ActionLink("Кабинет", "Profile", "User")
                    @Html.Raw("/");
                    @Html.ActionLink("Выход", "Logout", "User")
                }
                else
                {
                    @Html.ActionLink("Вход", "Login", "User")
                    @Html.Raw("/");
                    @Html.ActionLink("Регистрация", "Registration", "User")
                }
            </div>
        </div>
    </header>

    <div class="row justify-content-center">
        @RenderBody()
    </div>

    <footer>
        <p class="text-center">&copy; @DateTime.Now.Year Helen_Vov <a class="justify-content-center" href="#">Вверх</a> </p>
    </footer>


    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>