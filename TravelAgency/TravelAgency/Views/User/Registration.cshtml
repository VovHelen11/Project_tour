@model TravelAgency.Models.UserModel.RegistrationData
@{
    ViewBag.Title = "Registration";
}
@using (Html.BeginForm("Registration", "User", FormMethod.Post))
{
    @Html.LabelFor(x => x.Firstname)
    @Html.ValidationMessageFor(x => x.Firstname)
    @Html.TextBoxFor(x => x.Firstname, new {placeholder = "log"})

    @Html.LabelFor(x => x.Lastname)
    @Html.ValidationMessageFor(x => x.Lastname)
    @Html.TextBoxFor(x => x.Lastname, new {placeholder = "pas "})

    @Html.LabelFor(x => x.Login)
    @Html.ValidationMessageFor(x => x.Login)
    @Html.TextBoxFor(x => x.Login, new {placeholder = "log"})

    @Html.LabelFor(x => x.RepeatPassword)
    @Html.ValidationMessageFor(x => x.RepeatPassword)
    @Html.TextBoxFor(x => x.RepeatPassword, new {placeholder = "pas "})

    @Html.LabelFor(x => x.Password)
    @Html.ValidationMessageFor(x => x.Password)
    @Html.TextBoxFor(x => x.Password, new {placeholder = "pas "})

    <button type="submit">Отправить</button>
}