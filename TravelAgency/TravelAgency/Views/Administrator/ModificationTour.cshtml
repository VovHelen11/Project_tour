@model TravelAgency.Models.Model.ModificationTourVM
@{
    ViewBag.Title = "ModificationTour";
}

@using (Html.BeginForm("ModificationTour", "Administrator", FormMethod.Post))
{
    <div class="card form text-white bg-dark mb-3 ">

        <p>@Model.CountTour</p>

        @Html.LabelFor(x => x.Id)
        @Html.ValidationMessageFor(x => x.Id)
        @Html.TextBoxFor(x => x.Id, new { placeholder = "Id tour" })


        <button type="submit">Отправить</button>
    </div>


    if (Model.Tour != null )
    {
        <div class="card form text-white bg-dark mb-3 ">
        @Html.LabelFor(x => x.Tour.Name)
        @Html.ValidationMessageFor(x => x.Tour.Name)
        @Html.TextBoxFor(x => x.Tour.Name, new { placeholder = "Имя" })

        @Html.LabelFor(x => x.Tour.ArrivalDate)
        @Html.ValidationMessageFor(x => x.Tour.ArrivalDate)
        @Html.TextBoxFor(x => x.Tour.ArrivalDate, new { placeholder = "Дата отп", type="date", name="calendar"})

        @Html.LabelFor(x => x.Tour.DepartureData)
        @Html.ValidationMessageFor(x => x.Tour.DepartureData)
        @Html.TextBoxFor(x => x.Tour.DepartureData, new { placeholder = "Дата отп",type="date", name="calendar" })

        @Html.LabelFor(x => x.Tour.PeopleCount)
        @Html.ValidationMessageFor(x => x.Tour.PeopleCount)
        @Html.TextBoxFor(x => x.Tour.PeopleCount, new { placeholder = "Дата отп" })

        @Html.LabelFor(x => x.Tour.Price)
        @Html.ValidationMessageFor(x => x.Tour.Price)
        @Html.TextBoxFor(x => x.Tour.Price, new { placeholder = "Дата отп" })


        @Html.DropDownListFor(m => m.Tour.TourTypeId, Model.TourTypeSelect)

        @Html.DropDownListFor(m => m.Tour.HotelId, Model.HotelsSelect)


        <button type="submit">Отправить</button>
    </div>




    }
}